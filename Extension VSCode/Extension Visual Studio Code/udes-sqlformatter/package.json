{
  "name": "udes-sqlformatter",
  "displayName": "UdeS-SQLFormatter",
  "description": "Formattage simple des fichiers SQL.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "udes-sqlformatter.mariaDBFormatter",
        "title": "[UdeS] Format MariaDB SQL"
      },
      {
        "command": "udes-sqlformatter.mariaDBFormatterInLine",
        "title": "[UdeS] (In-line) Format MariaDB SQL"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "udes-sqlformatter.mariaDBFormatter",
          "when": "editorLangId == sql",
          "group": "navigation"
        },
        {
          "command": "udes-sqlformatter.mariaDBFormatterInLine",
          "when": "editorLangId == sql",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
